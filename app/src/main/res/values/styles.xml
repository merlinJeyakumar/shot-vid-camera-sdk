<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="AvenirRegular">
        <item name="fontFamily">@font/avenirnextltpro_regular</item>
    </style>

    <style name="AvenirBold">
        <item name="fontFamily">@font/avenirnextltpro_bold</item>
    </style>

    <style name="title" parent="AvenirRegular">
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="title.bold" parent="title">
        <item name="android:fontFamily">@font/avenirnextltpro_bold</item>
    </style>

    <style name="button" parent="AvenirBold">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:layout_marginLeft">@dimen/_10sdp</item>
        <item name="android:layout_marginRight">@dimen/_10sdp</item>
        <item name="android:paddingLeft">@dimen/_20sdp</item>
        <item name="android:paddingRight">@dimen/_20sdp</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="main_text" parent="AvenirRegular">
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="circle_imageview">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="splash_title" parent="AvenirBold">
        <item name="android:typeface">normal</item>
        <item name="android:textSize">@dimen/_16sdp</item>
    </style>

    <style name="splash_sub_title" parent="AvenirRegular">
        <item name="android:typeface">normal</item>
        <item name="android:textSize">@dimen/_9sdp</item>
    </style>

</resources>
